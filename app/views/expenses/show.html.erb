
<body>
	<div class="text-center">
    <br><h1><%= @expense.name %></h1><br><br>
  </div>

	<table class="table table-hover table-condensed table-striped table-striped">
  	<thead>
  		<tr>
  			<th>Name</th>
  			<th>Paid by</th>
  			<th>Split between</th>
  			<th><div class="text-right">Cost $</div></th>
  			<!-- <th class="text-right">Created at</th> -->
  			<th class="text-right">Updated at</th>
  		</tr>
  	</thead>

  	<tbody>
  		<tr>
  			<td><%= @expense.name %></td>
        <% user = User.find(@expense.user_id) %>
  			<td class="blue-links"><%= link_to user.name, user_path(user) %></td>
        <td><%= (@expense.split_between.keep_if { |user| user != "" and user != nil }).join(", ") %></td>
        <!-- display the cost with 2 decimal precision -->
  			<td class="text-right"><%= sprintf '%.2f', @expense.cost %></td>
  			<!-- <td class="text-right"><#%= @expense.created_at %></td> -->
  			<td class="text-right"><%= @expense.updated_at %></td>
  		</tr>
  	</tbody>
  </table>
  <br>


  <div class="text-center">
		    <button type="submit" class="btn btn-primary">
		 			<%= link_to 'Back to Main Page', root_url %>
		 		</button>
		  </div>
</body>

